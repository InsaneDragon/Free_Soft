@model Account
<body>
    <h3 class="center">Личная Информация</h3>
    <div class="LoginForm">
        <div>
            <label>Email</label>
            <h5>@Model.Email</h5>
            <label>Login</label>
            <h5>@Model.Login</h5>
            @if (Model.Role == 1)
            {
                <a href="/Admin/Index" class="btn btn-success" style="width:100%;margin-bottom:10px">Добавить Софт</a>
                <a href="/Admin/AccountView" class="btn btn-success" style="width:100%;margin-bottom:10px">Просмотр Аккаунтов</a>
            }
            <a asp-action="QuitFromAccount" asp-controller="Account" style="color:white" class="btn btn-dark quitbtn">Выйти из Аккаунта</a>
        </div>
    </div>
</body>